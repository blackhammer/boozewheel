<script type="text/javascript">

	var boozeActionList = ["Penalty", "Beer", "Mixed", "Shot","Beer", "Mixed", "Beer", "Major Penalty"];

	if(sessionStorage)
	{
		if(sessionStorage.getItem("wheelList"))
		{
			boozeActionList = JSON.parse(sessionStorage.getItem("wheelList"));
		}
		else
		{				
			sessionStorage.setItem("wheelList", JSON.stringify(boozeActionList));			 
		}
	}
	drawRouletteWheel(boozeActionList);
</script>
